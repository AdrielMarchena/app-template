    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++ - Build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Game/bin/Debug-linux-x86_64/Game/Game",
            "symbolSearchPath": "{workspaceFolder}/Game/src",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/Game",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/Game/vendor/fmodstudioapi20206linux/api/core/lib/x86_64"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true,
                },
            ],
            "preLaunchTask": "C/C++: g++ make build",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "(gdb) Launch Release",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Game/bin/Release-linux-x86_64/Game/Game",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/Game",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/Game/vendor/fmodstudioapi20206linux/api/core/lib/x86_64"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++ make build release"
        },
        {
            "name": "(gdb) Launch Dist",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Game/bin/Dist-linux-x86_64/Game/Game",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/Game",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/Game/vendor/fmodstudioapi20206linux/api/core/lib/x86_64"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++ make build dist"
        },
    ]
}